{
  "name": "ecommerce-store",
  "version": "1.0.0",
  "description": "We will create the full professional Ecommerce Store using MERN Stack and many other tools",
  "main": "index.js",
  "engines": {
    "node": "v16.15.1",
    "npm": "8.11.0"
  },
  "scripts": {
    "test": "echo \"Error: no test specified\" && exit 1",
    "client": "cd client && npm start",
    "server": "cd server && nodemon server.js",
    "build": "cd client && npm run build",
    "dev": "concurrently --kill-others-on-fail \"npm run server\" \"npm run client\"",
    "start": "cd server && node server.js",
    "heroku-postbuild": "cd client && npm install && npm install --only=dev --no-shrinkwrap && npm run build && cd ../server && npm install"

  },
